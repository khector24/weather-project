<%- include("partials/head") %>

<body>
  <main>
    <div class="sky">
        <img class="cloud cloud-sun move-right" src="/images/cloud-sun.png" />
        <img class="cloud cloud-1 move-right" src="/images/cloud.png" />
        <img class="cloud cloud-2 move-right" src="/images/cloudy.png" />
        <img class="cloud cloud-3 move-left" src="/images/cloud.png" />
        <img class="cloud cloud-4 move-left" src="/images/cloudy.png" />
    </div>

    <h1>Enter a City to See the Weather Forecast</h1>

    <div class="form-container">
      <form action="/" method="post">
        <label for="cityInput">Type in your desired city:</label>
        <input 
          id="cityInput" 
          type="text" 
          name="cityName" 
          placeholder="City Name"
        />
        <button type="submit">Go</button>
      </form>
    </div>
  </main>

  <%- include("partials/footer") %>
</body>
</html>
